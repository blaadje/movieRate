{
  "extends": [
    "tslint-eslint-rules",
    "tslint-react",
    "tslint-config-standard",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": ["build", "node_modules"]
  },
  "rulesDirectory": ["src"],
  "rules": {
    "jsx-no-lambda": false,
    "ordered-imports": [
      true,
      {
        "groups": [
          {
            "name": "library",
            "match": ".*[.]/(?:[a-z])",
            "order": 30
          },
          {
            "name": "aliases",
            "match": "^@[a-z].+",
            "order": 20
          },
          {
            "name": "used",
            "match": "[a-z]",
            "order": 10
          }
        ],
        "grouped-imports": true,
        "import-sources-order": "lowercase-last",
        "named-imports-order": "lowercase-first"
      }
    ],
    "jsx-no-multiline-js": false,
    "no-console": {
      "severity": "warning",
      "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
    }
  },
  "jsRules": {
    "no-empty": true
  }
}
