{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@containers/*": ["src/containers/*"],
      "@views/*": ["src/views/*"],
      "@core/*": ["src/core/*"],
      "@settings": ["src/settings"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "dist"],
  "files": ["src/typings.d.ts"]
}
